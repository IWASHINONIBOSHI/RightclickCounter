{
  "manifest_version": 3,
  "name": "テキストカウンター",
  "version": "1.1",
  "description": "選択したテキストの文字数を簡単にカウントします",

  "permissions": [
    "contextMenus",
    "activeTab"
  ],

  "background": {
    "service_worker": "background.js"
  },


  "action": {
    "default_popup": "popup.html",
    "default_title": "テキストカウンター"
  }
}